@model SocialApp.MVC.Models.FormPostModel

<div class="row">
    <div class="col-lg-12">
        <form id="AddPostForm" asp-action="Post" asp-controller="Newsfeed"
              method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-lg-9">
                    <div class="form-group">
                        <textarea id="postMessage" class="form-control" type="text" asp-for="Message"></textarea>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <input id="postFile" class="form-control-file" type="file" accept="image/*" asp-for="File" />
                    </div>
                </div>
            </div>
            <button name="uploadbtn" class="btn btn-primary" type="submit">Share</button>
        </form>
    </div>
</div>
