@model SocialApp.MVC.Models.SearchModel

<div class="row">
    <div class="col-lg-12">
        <form id="SearchForm" asp-action="Index" asp-controller="Search"
              method="post">
            <div class="row">
                <div class="col-lg-9">
                    <div class="form-group">
                        <label asp-for="Phrase" class="control-label"></label>
                        <input asp-for="Phrase" class="form-control" />
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="form-group">
                        <label asp-for="LikeMore" class="control-label"></label>
                        <input asp-for="LikeMore" type="number" class="form-control" />
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="form-group">
                        <label asp-for="LikeLess" class="control-label"></label>
                        <input asp-for="LikeLess" type="number" class="form-control" />
                    </div>
                </div>
            </div>
            <button  class="btn btn-primary" type="submit">Search</button>
        </form>
    </div>
</div>
